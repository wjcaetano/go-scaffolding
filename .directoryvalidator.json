                },
                {
                  "type": "common",
                  "key": "rule_mocks"
                }
              ]
            },
            {
              "type": "directory",
              "name": "repository",
              "isOptional": true,
              "rules": [
                {
                  "type": "directory",
                  "name": "http",
                  "isOptional": true,
                  "rules": [
                    {
                      "type": "common",
                      "key": "rule_anyfile"
                    },
                    {
                      "type": "common",
                      "key": "rule_anyfiletest"
                    },
                    {
                      "type": "common",
                      "key": "rule_mocks"
                    }
                  ]
                },
                {
                  "type": "directory",
                  "name": "sql",
                  "isOptional": true,
                  "rules": [
                    {
                      "type": "common",
                      "key": "rule_anysubdirectory"
                    },
                    {
                      "type": "common",
                      "key": "rule_anyfile"
                    },
                    {
                      "type": "common",
                      "key": "rule_anyfiletest"
                    },
                    {
                      "type": "common",
                      "key": "rule_mocks"
                    }
                  ]
                },
                {
                  "type": "directory",
                  "name": "bigq",
                  "isOptional": true,
                  "rules": [
                    {
                      "type": "common",
                      "key": "rule_anysubdirectory"
                    },
                    {
                      "type": "common",
                      "key": "rule_anyfile"
                    },
                    {
                      "type": "common",
                      "key": "rule_anyfiletest"
                    },
                    {
                      "type": "common",
                      "key": "rule_mocks"
                    }
                  ]
                }
              ]
            },
            {
              "type": "common",
              "key": "rule_mocks"
            }
          ]
        }
      ]
    }
  ]
