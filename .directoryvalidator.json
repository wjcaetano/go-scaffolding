  "commonRules": {
    "rule_mocks": {
      "type": "directory",
      "name": "mocks",
      "isOptional": true,
      "rules": [
        {
          "type": "file",
          "name": "/.*/",
          "isOptional": true
        },
        {
          "type": "directory",
          "name": "/.*/",
          "isOptional": true
        }
      ]
    },
    "rule_anyfile": {
      "type": "file",
      "name": "/.*\\./",
      "isOptional": true
    },
    "rule_anyfiletest": {
      "type": "file",
      "name": "/.*_test\\.go/",
      "isOptional": true
    },
    "rule_anysubdirectory": {
      "type": "directory",
      "name": "/.*/",
      "isOptional": true
    },
    "rule_subfeature": {
      "type": "directory",
      "name": "/.*/",
      "isOptional": false,
      "rules": [
        {
          "type": "common",
          "key": "rule_anyfile"
        },
        {
          "type": "common",
          "key": "rule_anyfiletest"
        },
        {
          "type": "common",
          "key": "rule_mocks"
        }
      ]
    }
  },
  "rules": [
    {
      "type": "directory",
      "name": "app",
      "isOptional": false,
      "isRecursive": true,
      "rules": [
        {
          "type": "directory",
          "name": "/.*/",
          "isOptional": false,
          "rules": [
            {
              "type": "file",
              "name": "entity.go",
              "isOptional": true
            },
            {
              "type": "file",
              "name": "entity_test.go",
              "isOptional": true
            },
            {
              "type": "file",
              "name": "errors.go",
              "isOptional": true
            },
            {
              "type": "file",
              "name": "errors_test.go",
              "isOptional": true
            },
            {
              "type": "file",
              "name": "dto.go",
              "isOptional": true
            },
            {
              "type": "file",
              "name": "dto_test.go",
              "isOptional": true
            },
            {
              "type": "directory",
              "name": "entrypoint",
              "isOptional": true,
              "rules": [
                {
                  "type": "directory",
                  "name": "rest",
                  "isOptional": true,
                  "rules": [
                    {
                      "type": "common",
                      "key": "rule_subfeature"
                    }
                  ]
                },
                {
                  "type": "directory",
                  "name": "bigq",
                  "isOptional": true,
                  "rules": [
                    {
                      "type": "common",
                      "key": "rule_subfeature"
                    }
                  ]
                }
              ]
            },
            {
              "type": "directory",
              "name": "metrics",
              "isOptional": true,
              "rules": [
                {
                  "type": "common",
                  "key": "rule_anyfile"
                },
                {
                  "type": "common",
                  "key": "rule_anyfiletest"
                },
                {
                  "type": "common",
                  "key": "rule_mocks"
                }
              ]
            },
            {
              "type": "directory",
              "name": "usecase",
              "isOptional": true,
              "rules": [
                {
                  "type": "common",
                  "key": "rule_anysubdirectory"
                },
                {
                  "type": "common",
                  "key": "rule_anyfile"
                },
                {
                  "type": "common",
                  "key": "rule_anyfiletest"
                },
                {
                  "type": "common",
                  "key": "rule_mocks"
                }
              ]
